#ifndef SERMENT_CONFIG_H_
#define SERMENT_CONFIG_H_

#include "detran_config.hh"

// design by contract level 
#cmakedefine SERMENT_ENABLE_DBC

// debug output
#cmakedefine SERMENT_ENABLE_DEBUG

// testing
#cmakedefine SERMENT_ENABLE_TEST

// serment packages
#cmakedefine SERMENT_BUILD_ERME
#cmakedefine SERMENT_BUILD_DIFF2D
#cmakedefine SERMENT_BUILD_SLABTRAN

// external libraries
#cmakedefine SERMENT_ENABLE_PETSC
#cmakedefine SERMENT_ENABLE_SLEPC
#cmakedefine SERMENT_ENABLE_SILO
#cmakedefine SERMENT_ENABLE_MPI
#cmakedefine SERMENT_ENABLE_OPENMP
#cmakedefine SERMENT_ENABLE_XML
#cmakedefine SERMENT_ENABLE_BOOST

// date of compilation
#cmakedefine SERMENT_COMPILED_M ${SERMENT_COMPILED_M}
#cmakedefine SERMENT_COMPILED_D ${SERMENT_COMPILED_D}
#cmakedefine SERMENT_COMPILED_Y ${SERMENT_COMPILED_Y}

// git revision
#define SERMENT_GIT_SHA1 "${SERMENT_WC_REVISION_HASH}"

#endif // SERMENT_CONFIG_H_ 

